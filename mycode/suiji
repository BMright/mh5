		<script>
			function suiji(){
				var num11="";
				for(var counter=0;counter<4;counter++)
				{
					var num1=Math.round(Math.random()*9);
					num11+=num1;
				}
				document.getElementById("suiji").value=num11;
			}
			function yanzhengma(){
				var num22="";
				
				for(var counter=0;counter<4;counter++)
				{
					var num2=Math.round(Math.random()*122);
					if(48<=parseInt(num2)&&parseInt(num2)<=57)
					{
						num22+=String.fromCharCode(parseInt(num2));
					}
					else if(81<=parseInt(num2)&&parseInt(num2)<=90)
					{
						num22+=String.fromCharCode(parseInt(num2));
					}
					else if(97<=parseInt(num2)&&parseInt(num2)<=122)
					{
						num22+=String.fromCharCode(parseInt(num2));
					}
					else
					{
						counter--;
					}
				}
				document.getElementById("yanzhengma").value=num22;
			}
			function unique(){
				var str=document.getElementById("unique").value;
				var counter=0;
				var str0="";
				for(counter;counter<str.length;counter++)
				{
					for(var i=0;i<counter;i++)
					{
						if(str[counter]==str[i])
						{
							break;
						}
					}
					if(i==counter)
					{
						str0+=str[counter];
					}
				}
				document.getElementById("unique0").innerHTML=str0;
				var str1= new Array;
				for(i=0;i<str0.length;i++)str1[i]=0;
				for(counter=0;counter<str0.length;counter++)
				{
					for(i=counter;i<str.length;i++)
					{
						if(str0[counter]==str[i])
						{
							str1[counter]++;
						}
					}
				}
				document.getElementById("unique1").innerHTML=str1;
			}
			function suijidianming(){
				var num=Math.round(Math.random()*14+1)
				switch(num)
				{
					case 1:document.getElementById("outputname").value="陈墨瞳";break;
					case 2:document.getElementById("outputname").value="赵香雪";break;
					case 3:document.getElementById("outputname").value="钱思梓";break;
					case 4:document.getElementById("outputname").value="李倩雨";break;
					case 5:document.getElementById("outputname").value="郭晓薰";break;
					case 6:document.getElementById("outputname").value="车静琪";break;
					case 7:document.getElementById("outputname").value="袁曼萍";break;
					case 8:document.getElementById("outputname").value="孟韵璇";break;
					case 9:document.getElementById("outputname").value="刘雅娜";break;
					case 10:document.getElementById("outputname").value="曹淑蓉";break;
					case 11:document.getElementById("outputname").value="路明非";break;
					case 12:document.getElementById("outputname").value="小怪兽";break;
					case 13:document.getElementById("outputname").value="楚子航";break;
					case 14:document.getElementById("outputname").value="凯撒";break;
					case 15:document.getElementById("outputname").value="夏弥";break;
					
				}
			}
